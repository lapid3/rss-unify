{
	"formatter": {
		"js": {
			"indent_size": 1,
			"indent_char": "\t"
		}
	},
	"jshint": {
		"global": ["define", "require", "console", "window", "__dirname", "process", "module", "exports", "describe", "it"]
	},
	"exec": {
		"onKeys": {
			"ctrl+alt+r": {
				"cmd": "npm test",
				"cwd": "${dir}",
				"name": "run tests"
			}
		}
	}
}